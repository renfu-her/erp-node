<!-- views/layouts/layout.ejs -->
<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>

    <!-- 引入 Bootstrap 5.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- 引入自訂樣式 -->
    <link rel="stylesheet" href="/css/style.css">
    <style>
        body {
            overflow-x: hidden;
        }
        #sidebar {
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            z-index: 999;
            background: #f8f9fa;
            transition: all 0.3s;
        }
        #sidebar.active {
            margin-left: -250px;
        }
        #content {
            width: calc(100% - 250px);
            margin-left: 250px;
            transition: all 0.3s;
        }
        #content.active {
            width: 100%;
            margin-left: 0;
        }
        @media (max-width: 768px) {
            #sidebar {
                margin-left: -250px;
            }
            #sidebar.active {
                margin-left: 0;
            }
            #content {
                width: 100%;
                margin-left: 0;
            }
        }
    </style>
</head>
<body>
    <nav id="sidebar">
        <div class="position-sticky pt-3">
            <h3 class="text-center mb-4">ERP 系統</h3>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="/">儀表板</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/user-management">使用者管理</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/hr-system">人事系統</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/inventory-system">進銷存系統</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- 右側內容區域 -->
    <div id="content">
        <!-- 頂部導航欄 -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
            <div class="container-fluid">
                <button id="sidebarToggle" class="btn btn-outline-secondary me-2">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <span class="navbar-brand"><%- title %></span>
                <div class="ms-auto d-flex align-items-center">
                    <% if (typeof cookies !== 'undefined' && cookies.user) { %>
                        <% try { %>
                            <% const user = JSON.parse(cookies.user) %>
                            <span class="me-3">歡迎，<%= user.name %></span>
                            <a href="/auth/logout" class="btn btn-outline-primary btn-sm">登出</a>
                        <% } catch (e) { %>
                            <% console.error('Error parsing user cookie:', e) %>
                            <a href="/auth/login" class="btn btn-outline-primary btn-sm">登入</a>
                        <% } %>
                    <% } else { %>
                        <a href="/auth/login" class="btn btn-outline-primary btn-sm">登入</a>
                    <% } %>
                </div>
            </div>
        </nav>

        <!-- 主要內容區域 -->
        <div class="container-fluid">
            <%- body %>
        </div>
    </div>

    <!-- 引入 jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- 引入 Bootstrap 5.3 的 JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- 自訂 JavaScript -->
    <script src="/js/main.js"></script>
    <script>
        $(document).ready(function () {
            $('#sidebarToggle').on('click', function () {
                $('#sidebar, #content').toggleClass('active');
            });
        });
    </script>
</body>
</html>
